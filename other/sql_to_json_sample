  declare @json varchar(max),
   @begin char(1) = '[',
   @end char(1) = ']',
   @newLine char(2) = char(13) + char(10),
   @newLineTab char(3) = char(13) + char(10) + char(9)
 
  set @json = @begin
 
  select '{' + @newLine + '"fields": {' + @newLineTab + '"status_group": ' + '"' + convert(varchar, lStatusGroup_id) + '"' + @newLineTab + '"next_group": ' + '"' +convert(varchar, lNextGroup_id) + '"' + @newLineTab + '"status:" ' + '"' + convert(varchar, lStatus_id) + '"' + @newLineTab + '}' + @newLine + '},' from STATUSGROUP
